<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.wxm.camerajob">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".utility.ContextUtil"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_camera_labe1_big"
        android:label="@string/cn_app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="andriod:label">
        <receiver android:name=".alarm.AlarmReceiver" />
        <!-- android:process=":remote" /> -->

        <service
            android:name=".alarm.CameraJobService"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <activity
            android:name=".ui.Test.Camera.ACCameraTest"
            android:exported="true" />

        <activity
            android:name=".ui.Job.JobCreate.ACJobCreate"
            android:label="@string/job_create"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.Camera.CameraSetting.ACCameraSetting"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.Test.Camera.ACSilentCameraTest"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.Job.JobShow.ACJobShow"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.Utility.Help.ACHelp"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.Camera.CameraPreview.ACCameraPreview"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.Utility.Setting.ACSetting"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.Job.JobSlide.ACJobSlide"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.Test.Email.ACEmailTest"
            android:exported="true"
            android:label="测试邮箱" />

        <activity
            android:name=".ui.Utility.Loader.ACLoader"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>