<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_1"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_camera"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RadioButton
            android:id="@+id/acrb_cs_frontcamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:focusable="true"
            android:text="@string/cn_frontcamera"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/acrb_cs_backcamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/acrb_cs_frontcamera"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"
            android:focusable="true"
            android:text="@string/cn_backcamera"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/acsw_cs_autofocus"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/acrb_cs_backcamera"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:text="@string/cn_autofocus"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/acsw_cs_autoflash"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/acsw_cs_autofocus"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="@string/cn_autoflash"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/rl_switch"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@color/linen">

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_switch" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="6dp"
                android:text="@string/cn_preview" />
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_dpi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_camera"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:padding="8dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/cn_cameradpi"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/acsp_cs_dpi"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/textView7" />
    </RelativeLayout>
</RelativeLayout>
