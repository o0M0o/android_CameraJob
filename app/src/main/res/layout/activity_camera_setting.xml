<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wxm.camerajob.ui.activitys.ActivityCameraSetting">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="前摄像头"
        android:id="@+id/acrb_cs_frontcamera"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="22sp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="后摄像头"
        android:id="@+id/acrb_cs_backcamera"
        android:layout_toRightOf="@+id/acrb_cs_frontcamera"
        android:layout_marginLeft="45dp"
        android:textSize="22sp" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/acsp_cs_dpi"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/textView7"
        android:layout_toRightOf="@+id/textView7" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自动对焦"
        android:id="@+id/acsw_cs_autofocus"
        android:layout_below="@+id/acsp_cs_dpi"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="70dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自动闪光灯"
        android:id="@+id/acsw_cs_autoflash"
        android:layout_below="@+id/acsw_cs_autofocus"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="分辨率 : "
        android:id="@+id/textView7"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="22sp"
        android:layout_alignEnd="@+id/acrb_cs_frontcamera"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/acrb_cs_frontcamera"
        android:layout_marginTop="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="确认"
        android:id="@+id/acbt_cs_accept"
        android:layout_below="@+id/acsw_cs_autoflash"
        android:layout_alignEnd="@+id/acsp_cs_dpi"
        android:layout_marginTop="45dp"
        android:layout_marginRight="20dp"
        android:textSize="22sp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="放弃"
        android:id="@+id/acbt_cs_giveup"
        android:layout_below="@+id/acbt_cs_accept"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/acbt_cs_accept"
        android:layout_alignLeft="@+id/acbt_cs_accept"
        android:textSize="22sp" />
</RelativeLayout>
