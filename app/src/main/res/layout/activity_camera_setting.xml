<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wxm.camerajob.ui.activitys.ActivityCameraSetting">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cn_frontcamera"
        android:id="@+id/acrb_cs_frontcamera"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="22sp"
        android:clickable="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cn_backcamera"
        android:id="@+id/acrb_cs_backcamera"
        android:layout_toRightOf="@+id/acrb_cs_frontcamera"
        android:layout_marginLeft="45dp"
        android:textSize="22sp"
        android:clickable="true" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/acsp_cs_dpi"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:layout_alignBottom="@+id/textView7" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cn_autofocus"
        android:id="@+id/acsw_cs_autofocus"
        android:layout_below="@+id/acsp_cs_dpi"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="70dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cn_autoflash"
        android:id="@+id/acsw_cs_autoflash"
        android:layout_below="@+id/acsw_cs_autofocus"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/cn_cameradpi"
        android:id="@+id/textView7"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="22sp"
        android:layout_alignEnd="@+id/acrb_cs_frontcamera"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/acrb_cs_frontcamera"
        android:layout_marginTop="20dp" />
</RelativeLayout>
