<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_1"
    tools:context="com.wxm.camerajob.ui.acinterface.ACJob">

    <RelativeLayout
        android:id="@+id/rl_main"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/til_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@color/white">

            <android.support.design.widget.TextInputEditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/acet_job_name"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:hint="@string/job_name"/>
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/iv_line1"
            android:layout_below="@id/til_name"
            android:background="@color/grey_1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="2dp" />

        <RelativeLayout
            android:id="@+id/rl_job_type"
            android:layout_below="@id/iv_line1"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:layout_marginStart="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/job_type"
                android:textSize="16sp"
                android:layout_alignParentStart="true" />

            <Spinner
                android:id="@+id/acsp_job_type"
                android:layout_toEndOf="@id/textView2"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_alignTop="@id/textView2"
                android:layout_width="128dp"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/acsp_job_point"
                android:layout_toEndOf="@id/acsp_job_type"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_alignTop="@id/acsp_job_type"
                android:layout_below="@id/textView2"
                android:layout_height="wrap_content"
                android:layout_width="96dp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_camera"
        android:layout_below="@id/rl_main"
        android:layout_marginTop="16dp"
        android:paddingStart="12dp"
        android:paddingEnd="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_camera"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_camera" />

        <TextView
            android:id="@+id/tv_camera_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_camera"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/iv_camera"
            android:text="前置摄像头"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_camera_dpi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_camera"
            android:layout_marginStart="100dp"
            android:layout_toEndOf="@id/iv_camera"
            android:text="1280 * 1024"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_camera_flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_camera"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/iv_camera"
            android:text="使用闪光灯"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_camera_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_camera"
            android:layout_marginStart="100dp"
            android:layout_toEndOf="@id/iv_camera"
            android:text="自动对焦"
            android:textSize="14sp" />


        <RelativeLayout
            android:id="@+id/rl_preview"
            android:background="@color/linen"
            android:layout_marginEnd="52dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="42dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_preview"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:src="@drawable/ic_switch" />

            <TextView
                android:layout_below="@id/iv_preview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="@string/cn_preview"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_setting"
            android:background="@color/linen"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="42dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:padding="4dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_setting" />

            <TextView
                android:layout_below="@id/iv_setting"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="@string/cn_setting"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_camera"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:paddingBottom="16dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="16dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/acet_job_startdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:hint="@string/cnhint_camerajob_starttime" />
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/iv_line"
            android:layout_below="@id/til_start_date"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/grey_1" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_line"
            android:background="@color/white">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/acet_job_enddate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:hint="@string/cnhint_camerajob_endtime" />
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>
</RelativeLayout>
