<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_job"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="3dp"
            android:src="@drawable/ic_job" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/iv_job"
            android:background="@color/linen">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/acet_job_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:hint="@string/jobName"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_line"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_below="@id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_line1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey_1" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_type"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        android:layout_below="@id/rl_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_active"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="3dp"
            android:src="@drawable/ic_active" />

        <GridView
            android:id="@+id/gv_job_type"
            android:layout_toEndOf="@id/iv_active"
            android:layout_marginStart="12dp"
            android:layout_alignParentTop="true"
            android:numColumns="3"
            android:horizontalSpacing="4dp"
            android:layout_width="match_parent"
            android:layout_height="26dp" />

        <GridView
            android:id="@+id/gv_job_point"
            android:layout_toEndOf="@id/iv_active"
            android:layout_marginStart="12dp"
            android:layout_below="@id/gv_job_type"
            android:layout_marginTop="8dp"
            android:numColumns="5"
            android:horizontalSpacing="4dp"
            android:layout_width="match_parent"
            android:layout_height="24dp" />
    </RelativeLayout>
</RelativeLayout>
