<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_email_send"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="3dp"
                android:src="@drawable/ic_email_send" />

            <TextView
                android:id="@+id/tv_email_server_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_email_send"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/iv_email_send"
                android:text="pop3"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_email_send_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_email_send"
                android:layout_marginStart="56dp"
                android:layout_toEndOf="@id/iv_email_send"
                android:text="每5张图片发送"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_email_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_email_send"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/iv_email_send"
                android:text="fly_in_wind@qq.com"
                android:textSize="16sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/rl_send"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:background="@color/grey_1" />

        <RelativeLayout
            android:id="@+id/rl_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_line">

            <ImageView
                android:id="@+id/iv_email_recv"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="3dp"
                android:src="@drawable/ic_email_receive" />

            <TextView
                android:id="@+id/tv_email_recv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/iv_email_recv"
                android:text="fly_in_wind@qq.com"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
