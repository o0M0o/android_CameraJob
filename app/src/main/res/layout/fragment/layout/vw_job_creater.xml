<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_1"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="2dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="2dp">

        <include layout="@layout/frg_job_info" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:paddingBottom="4dp"
        android:paddingEnd="16dp"
        android:paddingStart="12dp"
        android:paddingTop="4dp">

        <include layout="@layout/frg_camera_info" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_start_end_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:paddingBottom="2dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="2dp">

        <include layout="@layout/frg_calender_date" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:paddingBottom="2dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="2dp"
        android:visibility="invisible">

        <RelativeLayout
            android:id="@+id/rl_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/linen"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

            <Switch
                android:id="@+id/sw_send_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hint_use_email_send" />
        </RelativeLayout>

        <ViewSwitcher
            android:id="@+id/vs_email_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_button">

            <include
                layout="@layout/frg_email_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        </ViewSwitcher>
    </RelativeLayout>

</LinearLayout>