<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/grey_1"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_main"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_camera"
            android:layout_marginStart="12dp"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/acrb_cs_frontcamera"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cn_frontcamera"
                android:layout_alignParentStart="true"
                android:textSize="20sp"
                android:clickable="true" />

            <RadioButton
                android:id="@+id/acrb_cs_backcamera"
                android:layout_below="@id/acrb_cs_frontcamera"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cn_backcamera"
                android:textSize="20sp"
                android:clickable="true" />

            <Switch
                android:layout_below="@id/acrb_cs_backcamera"
                android:id="@+id/acsw_cs_autofocus"
                android:text="@string/cn_autofocus"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="20sp" />

            <Switch
                android:id="@+id/acsw_cs_autoflash"
                android:layout_below="@+id/acsw_cs_autofocus"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="@string/cn_autoflash"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="20sp"/>

            <RelativeLayout
                android:id="@+id/rl_switch"
                android:background="@color/linen"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24dp"
                android:layout_alignTop="@id/acrb_cs_frontcamera"
                android:layout_width="wrap_content"
                android:layout_height="68dp">
                <ImageView
                    android:id="@+id/iv_setting"
                    android:src="@drawable/ic_switch"
                    android:layout_marginTop="6dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />

                <TextView
                    android:layout_centerHorizontal="true"
                    android:text="切换预览"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="6dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_iv"
            android:layout_below="@id/rl_camera"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_line1"
                android:background="@color/grey_1"
                android:layout_centerInParent="true"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_width="match_parent"
                android:layout_height="2dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_dpi"
            android:paddingBottom="4dp"
            android:layout_below="@id/rl_iv"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView7"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/cn_cameradpi"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginStart="12dp"
                android:layout_alignParentStart="true" />

            <Spinner
                android:id="@+id/acsp_cs_dpi"
                android:layout_centerVertical="true"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/textView7"
                android:layout_marginStart="16dp"
                android:layout_alignBottom="@+id/textView7" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
