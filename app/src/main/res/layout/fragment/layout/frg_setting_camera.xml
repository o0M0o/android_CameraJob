<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/grey_1"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_main"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_camera"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cn_frontcamera"
                android:id="@+id/acrb_cs_frontcamera"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp"
                android:textSize="22sp"
                android:clickable="true" />

            <RadioButton
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cn_backcamera"
                android:id="@+id/acrb_cs_backcamera"
                android:layout_toEndOf="@+id/acrb_cs_frontcamera"
                android:layout_marginStart="45dp"
                android:textSize="22sp"
                android:clickable="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_dpi"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_below="@id/rl_camera"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/cn_cameradpi"
                android:id="@+id/textView7"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_marginStart="24dp"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_centerHorizontal="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/acsp_cs_dpi"
                android:layout_toEndOf="@+id/textView7"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_alignBottom="@+id/textView7" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_line1"
            android:layout_below="@id/rl_dpi"
            android:background="@color/grey_1"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="2dp" />


        <RelativeLayout
            android:id="@+id/rl_other"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_below="@id/iv_line1"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cn_autofocus"
                android:id="@+id/acsw_cs_autofocus"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="128dp"
                android:textSize="22sp" />

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cn_autoflash"
                android:id="@+id/acsw_cs_autoflash"
                android:layout_below="@+id/acsw_cs_autofocus"
                android:layout_marginTop="8dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="128dp"
                android:textSize="22sp"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_preview"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_below="@id/rl_main"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/bt_preview"
            android:text="@string/camera_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>